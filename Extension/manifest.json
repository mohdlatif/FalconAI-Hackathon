{
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "js": [
                "js/mark.min.js",
                "js/content.js",
                "/js/wordlearn.js"
            ],
            "css": [
                "main.css"
            ],
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_end",
            "all_frames": false,
            "match_about_blank": false
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; frame-src"
    },
    "description": "LexiLeap helps you memorize mre words with a single click and see them highlighted across websites",
    "host_permissions": [
        "https://*.youtube.com/*",
        "https://backend.theassignit.workers.dev/*"
    ],
    "icons": {
        "48": "icon.png"
    },
    "manifest_version": 3,
    "name": "LexiLeap",
    "options_ui": {
        "open_in_tab": true,
        "page": "options.html"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "scripting",
        "storage",
        "tabs"
    ],
    "short_name": "LexiLeap",
    "version": "1.0",
    "web_accessible_resources": [
        {
            "matches": [
                "<all_urls>"
            ],
            "resources": [
                "/js/*.js",
                "popup.html"
            ]
        }
    ]
}