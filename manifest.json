{
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "js": [
                "js/mark.min.js",
                "js/content.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "run_at": "document_idle"
            // "all_frames": false,
            // "match_about_blank": false
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; frame-src"
    },
    "description": "An extension to help you save more words to practice later",
    "host_permissions": [
        "https://*.youtube.com/*"
    ],
    "icons": {
        "48": "icon.png"
    },
    "manifest_version": 3,
    "name": "Text Saver",
    "options_ui": {
        "open_in_tab": true,
        "page": "options.html"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "scripting",
        "storage",
        "tabs"
    ],
    "short_name": "VocabBuilder",
    "version": "1.0",
    "web_accessible_resources": [
        {
            "matches": [
                "<all_urls>"
            ],
            "resources": [
                "/js/*.js",
                "popup.html"
            ]
        }
    ]
}